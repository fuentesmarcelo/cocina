<%- include('partials/header') -%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Recipe</title>
</head>
<body>
  <h1>Edit Recipe: <%= post.title %></h1>

  <!-- Edit Form -->
  <form action="/post/updatePost/<%= post._id %>" method="POST" enctype="multipart/form-data">
    <div>
      <label for="title">Title</label>
      <input type="text" name="title" value="<%= post.title %>" required>
    </div>
    <div>
      <label for="ingredients">Ingredients (comma-separated)</label>
      <input type="text" name="ingredients" value="<%= post.ingredients %>" required>
    </div>
    <div>
      <label for="directions">Directions (line breaks separate each step)</label>
      <textarea name="directions" required><%= post.directions %></textarea>
    </div>
    <div>
      <label for="file">Image</label>
      <input type="file" name="file">
      <img src="<%= post.imagePath %>" alt="Current image" width="200">
    </div>
    <button type="submit">Update Recipe</button>
  </form>

  <form action="/post/deletePost/<%= post._id %>" method="POST">
    <button type="submit" onclick="return confirm('Are you sure you want to delete this post?')">Delete Recipe</button>
  </form>

</body>
</html>

<%- include('partials/footer') -%>
