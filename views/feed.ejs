<%- include('partials/header') -%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recipe Feed</title>
</head>
<body>
  <h1>Recipe Feed</h1>
  <ul>
    <% posts.forEach(post => { %>
      <li>
        <h2><%= post.title %></h2>
        <p><%= post.caption %></p>
        <img src="<%= post.imagePath %>" alt="Recipe Image" width="200">
        <p>Likes: <%= post.likes %></p>
        <a href="/post/<%= post._id %>">View Recipe</a>
      </li>
    <% }); %>
  </ul>
</body>
</html>

<%- include('partials/footer') -%>