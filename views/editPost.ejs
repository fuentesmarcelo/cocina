<%- include('partials/header') -%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Recipe</title>
</head>
<body>
  <h1>Edit Recipe</h1>

  <form action="/post/edit/<%= post._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <!-- Title Input -->
    <label for="title">Title:</label>
    <input 
      type="text" 
      id="title" 
      name="title" 
      value="<%= post.title %>" 
      style="width: 100%; padding: 10px; font-size: 16px;" 
      required
    >

    <!-- Ingredients Textarea -->
    <label for="ingredients">Ingredients:</label>
    <textarea 
      id="ingredients" 
      name="ingredients" 
      rows="6" 
      style="width: 100%; padding: 10px; font-size: 16px;" 
      required
    ><%= post.ingredients %></textarea>

    <!-- Directions Textarea -->
    <label for="directions">Directions:</label>
    <textarea 
      id="directions" 
      name="directions" 
      rows="10" 
      style="width: 100%; padding: 10px; font-size: 16px;" 
      required
    ><%= post.directions %></textarea>

    <!-- Image Upload Input -->
    <label for="file">Upload New Image (optional):</label>
    <input 
      type="file" 
      id="file" 
      name="file" 
      style="font-size: 16px;"
    >

    <!-- Submit Button -->
    <button type="submit" style="padding: 10px 20px; font-size: 18px; margin-top: 20px;">Update Recipe</button>
  </form>
</body>
</html>

<%- include('partials/footer') -%>
